{
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "baseUrl": "./",
    "rootDir": "../../..",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "strictNullChecks": true,
    "paths": {
      "~/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./*",
    "./src/**/*.ts"
  ]
}
