{
  "name": "rollup-config-factory",
  "version": "0.4.2",
  "type": "module",
  "description": "Takes tiny input and returns a Rollup config in the way I personally like.",
  "keywords": [
    "bundler",
    "compiler",
    "config",
    "options",
    "preset",
    "settings",
    "template",
    "rollup",
    "rollup-config",
    "rollup-preset"
  ],
  "author": "Jaid <jaid.jsx@gmail.com> (https://github.com/Jaid)",
  "homepage": "https://github.com/Jaid/rollup-config-factory",
  "funding": "https://github.com/sponsors/jaid",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaid/rollup-config-factory"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "test": "node --import tsx --test test/test.ts",
    "build": "NODE_ENV=development bun node_modules/rollup/dist/bin/rollup --config rollup.config.ts",
    "build:production": "NODE_ENV=production bun node_modules/rollup/dist/bin/rollup --config rollup.config.ts",
    "dts": "dts-bundle-generator --out-file out/dts/types.d.ts --verbose --no-banner src/index.ts",
    "release": "fd --unrestricted --full-path 'dist/package/[\\w-]+/production/package.json' --exact-depth 5 --exec bash -c 'npm publish {//}'",
    "release:windows": "pwsh -Command \"Get-ChildItem -Path 'dist/package/*/production/package.json' | ForEach-Object { npm publish $_.DirectoryName }\""
  },
  "dependencies": {
    "@prettier/sync": "^0.6.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@rollup/plugin-yaml": "^4.1.2",
    "@sindresorhus/is": "^7.1.0",
    "debug": "^4.4.3",
    "dts-bundle-generator": "^9.5.1",
    "find-up": "^8.0.0",
    "forward-slash-path": "^0.3.0",
    "globby": "^14.1.0",
    "immer": "^10.1.3",
    "lodash-es": "^4.17.21",
    "normalize-package-data": "^8.0.0",
    "prettier": "^3.6.2",
    "publishimo": "^5.0.6",
    "rollup": "^4.52.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "zeug": "^2.1.0",
    "tapable": "^2.2.3"
  },
  "optionalDependencies": {
    "@rollup/plugin-sucrase": "^5.0.2",
    "@rollup/plugin-swc": "^0.4.0",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-ts": "^3.4.5"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "browserslist-config-jaid-universal": "^3.0.0",
    "eslint-config-jaid": "^13.3.2",
    "more-types": "^0.6.0",
    "rollup-config-factory": "^0.4.1",
    "tsconfig-jaid-node": "^8.1.0",
    "yaml": "^2.8.1"
  }
}